//gcc -lm -o pfits_describe pfits_describe.c pfits_setup.c -I/Users/hob044/hob044/software/cfitsio/include/ -L/Users/hob044/hob044/software/cfitsio/lib -lcfitsio 

#include <stdio.h>
#include <math.h>
#include <string.h>
#include <stdlib.h>
#include "pfits.h"

int main(int argc,char *argv[])
{
  dSetStruct *dSet;
  int debug=1;
  int i;
  fitsfile *fp; // FITS file pointer
  
  // Initialise everything
  initialise(&dSet,debug);
  
  // Read inputs
  for (i=0;i<argc;i++)
    {
      if (strcmp(argv[i],"-f")==0)
	setFilename(argv[++i],dSet,debug);
    }
  // Check inputs
  if (fileSet==0)
    errorStop("Must give a filename on the command line using the -f option\n",dSet,debug);
  // Open the file
  pfitsOpenFile(dSet,debug);

 
  // Load header information
  
  // Close the file
  pfitsCloseFile(fname,dSet,debug);
  
  // De-allocate the memory
  deallocateMemory(&dSet,debug);
}
